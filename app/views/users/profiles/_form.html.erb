<%= simple_form_for @profile, url: update_profile_path, html: {method: :patch, class: "form-horizontal"} do |f| %>
  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-sm-4" %>
    <div class="col-sm-7">
      <%= f.input :first_name, label: false, autofocus: true, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-sm-4" %>
    <div class="col-sm-7">
      <%= f.input :last_name,  label: false, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :picture, class: "control-label col-sm-4" %>
    <div class="col-sm-7">
      <%= f.file_field :picture, label: false %>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-6 col-sm-12 col-sm-offset-4 col-xs-offset-4">
      <div class="btn-toolbar">
        <%= submit_tag("Save", {:class => 'btn btn-primary'}) %>
        <%= link_to "Back", :back, class: "btn btn-default" %>
      </div>
    </div>
  </div>
<% end %>
